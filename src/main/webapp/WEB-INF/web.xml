<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>filterCheckLogin</filter-name>
        <filter-class>pl.pawww.hurt.filters.filterCheckLogin</filter-class>
        <init-param>
            <param-name>loginURI</param-name>
            <param-value>/LoginServlet</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>filterUserActivity</filter-name>
        <filter-class>pl.pawww.hurt.filters.filterUserActivity</filter-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>filterCheckLogin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filterUserActivity</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>pl.pawww.hurt.listeners.ContextListenerAplikacji</listener-class>
    </listener>
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.users.addUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showAllUsers</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.users.showAllUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.products.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showAllProducts</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.products.showAllProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modyfikujProdukt</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.products.modyfikujProdukt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addShop</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.shops.addShop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showAllShops</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.shops.showAllShops</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.login.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>pl.pawww.hurt.servlets.login.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/users/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showAllUsers</servlet-name>
        <url-pattern>/users/showAllUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modyfikujProdukt</servlet-name>
        <url-pattern>/products/modyfikujProdukt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showAllProducts</servlet-name>
        <url-pattern>/products/showAllProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addShop</servlet-name>
        <url-pattern>/shops/addShop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showAllShops</servlet-name>
        <url-pattern>/shops/showAllShops</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
